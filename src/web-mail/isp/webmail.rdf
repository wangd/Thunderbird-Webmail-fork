<?xml version="1.0"?>
<RDF:RDF xmlns:NC="http://home.netscape.com/NC-rdf#"
         xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#">

    <RDF:Description about="NC:ispinfo">
        <NC:providers>
              <NC:nsIMsgAccount  about="urn:webmail">
                <!-- pop3 server info -->
                <NC:incomingServer>
                    <NC:nsIMsgIncomingServer>
                        <NC:prettyName>Webmail</NC:prettyName>
                        <NC:hostName>localhost</NC:hostName>
                        <NC:type>pop3</NC:type>
                        <NC:ServerType-pop3>
                            <NC:nsIPopIncomingServer>
                                <NC:leaveMessagesOnServer>true</NC:leaveMessagesOnServer>
                                <NC:deleteMailLeftOnServer>true</NC:deleteMailLeftOnServer>
                            </NC:nsIPopIncomingServer>
                        </NC:ServerType-pop3>
                        <NC:loginAtStartUp>true</NC:loginAtStartUp>
                        <NC:downloadOnBiff>true</NC:downloadOnBiff>
                        <NC:rememberPassword>true</NC:rememberPassword>
                        <NC:biffMinutes>15</NC:biffMinutes>
                        <NC:doBiff>true</NC:doBiff>
                        <NC:port>110</NC:port>
                    </NC:nsIMsgIncomingServer>
                </NC:incomingServer>
                <NC:incomingServerUserNameRequiresDomain>true</NC:incomingServerUserNameRequiresDomain>

                <!-- smtp server info -->
                <NC:smtp>
                      <NC:nsISmtpServer>
                        <NC:hostname>localhost</NC:hostname>
                        <NC:port>25</NC:port>
                        <NC:trySSL>0</NC:trySSL>
                        <NC:description>Webmail</NC:description>
                      </NC:nsISmtpServer>
                </NC:smtp>
                <NC:smtpUserNameRequiresDomain>true</NC:smtpUserNameRequiresDomain>
                <NC:smtpRequiresUsername>true</NC:smtpRequiresUsername>
                <NC:smtpCreateNewServer>true</NC:smtpCreateNewServer>
                <NC:smtpUsePreferredServer>false</NC:smtpUsePreferredServer>

                <!-- identity defaults -->
                <NC:identity>
                  <NC:nsIMsgIdentity>
                  </NC:nsIMsgIdentity>
                </NC:identity>

                <!-- other options -->
                <NC:wizardSkipPanels>serverpage,accnamepage</NC:wizardSkipPanels>
                <NC:wizardShortName>Webmail</NC:wizardShortName>
                <NC:wizardLongName>Webmail</NC:wizardLongName>
                <NC:wizardShow>true</NC:wizardShow>
                <NC:wizardPromote>true</NC:wizardPromote>
                <NC:emailProviderName>Webmail</NC:emailProviderName>
                <NC:sampleEmail>example@hotmail.com</NC:sampleEmail>
                <NC:sampleUserName>example@hotmail.com</NC:sampleUserName>
                <NC:emailIDDescription>Webmail Username:</NC:emailIDDescription>
                <NC:showServerDetailsOnWizardSummary>true</NC:showServerDetailsOnWizardSummary>
              </NC:nsIMsgAccount>
        </NC:providers>
    </RDF:Description>
</RDF:RDF>