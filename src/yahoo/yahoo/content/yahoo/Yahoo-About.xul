<?xml version="1.0"?> 
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?> 
<?xml-stylesheet href="chrome://yahoo/content/Yahoo-About.css" type="text/css"?> 

<!DOCTYPE dialog SYSTEM "chrome://yahoo/locale/Yahoo-About.dtd">

<window class="dialog"
        title= "&YahooAbout.Title;"
        orient="vertical"
        autostretch="always"
        onload="gYahooAbout.init();sizeToContent()"
        onunload ="gYahooAbout.stop()"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        id = "YahooAboutDialog">
     
     <stringbundleset>
	   <stringbundle id="stringsYahooAbout" src="chrome://Yahoo/locale/Yahoo-About.properties"/>
	</stringbundleset>
	
    <script type="application/x-javascript" src="chrome://Yahoo/content/Yahoo-About.js"/>
        
    <groupbox align="center" orient="horizontal">
        <vbox>
            <image id="Yahoo"/>
            <text value="&YahooAbout.ExtVersion;" id = "YahooVersion"/>
            <text value="&YahooAbout.ExtDescription;" id = "YahooDescription"/>
            <text value="&YahooAbout.ExtCreaterTitle;" id = "YahooCreatorLabel"/>
            <hbox>
                <image id="LionImage"/>
                <text value="&YahooAbout.ExtCreator;" class = "YahooCreatorText"/>
            </hbox>
            <text value="&YahooAbout.ExtContributorTitle;" id = "YahooContributorLabel"/>
            <vbox flex="1" id="YahooContributorBox"/>
            <text value="&YahooAbout.ExtHome;" 
                  id = "YahooHomePage"
                  onclick="window.opener.openURL('&YahooAbout.ExtHomeURL;');"/>
        </vbox>
       
    </groupbox>

    <hbox>
        <spacer flex="1"/>
        <button label="&YahooAbout.ExtButton;" oncommand="window.close();"/>
    </hbox>
</window>
